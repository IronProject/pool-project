<div class="flex">
  <div class="centered">
    <div class="detail tournament">


<h2 id="crea">Crea un nuevo torneo</h2>

<form action='/tournaments/new' method='post' id="new">
  <label for='name'>Nombre del Torneo</label><br>
  <input id="inputname" type='text' name='name' placeholder='name' class="form-tourn-new">
  <br><br>

  <label for='level'>Nivel de jugadores</label><br>
  <select name='level' class="form-tourn-new" id="formfix">
    <option value='Principiante'>Principiante</option>
    <option value='Intermedio'>Intermedio</option>
    <option value='Avanzado'>Avanzado</option>
  </select>
  <br><br>

  <label for='maxParticipants'>Número máximo de jugadores</label><br>
  <input type='number' name='maxParticipants' placeholder='Número' class="form-tourn-new"required>
  <br><br>

  <label for='startdate'>Fecha de Inicio</label><br>
  <input type='date' name='startdate' placeholder='Inicio' class="form-tourn-new">
  <br><br>

  <label for='endingdate'>Fecha de Finalización</label><br>
  <input type='date' name='endingdate' placeholder='Fin' class="form-tourn-new">
  <br><br>

  <button id="hecho" type='submit' class="btn">Hecho</button>
  <br><br>
</form>

<a href='/tournaments' class="volver"><button class="btn orange new">Volver</button></a>

    </div>
  </div>
</div>
