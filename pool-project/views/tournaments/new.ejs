<h2>Crea un nuevo torneo</h2>

<form action="/tournaments/new" method="post">
  <label for="name">Nombre del Torneo</label><br>
  <input type="text" name="name" placeholder="name">
  <br><br>

  <label for="level">Nivel de jugadores</label><br>
  <select name="level">
    <option value="beginner">Principiante</option>
    <option value="intermediate">Intermedio</option>
    <option value="advanced">Avanzado</option>
  </select>
  <br><br>

  <label for="participants">Número máximo de jugadores</label><br>
  <input type="number" name="participants" placeholder="Número">
  <br><br>

  <label for="startdate">Fecha de Inicio</label><br>
  <input type="date" name="startdate" placeholder="Inicio">
  <br><br>

  <label for="endingdate">Fecha de Finalización</label><br>
  <input type="date" name="endingdate" placeholder="Fin">
  <br><br>

  <button type="submit">Hecho</button>
  <br><br>
</form>

<a href="./tournaments">Volver atrás</a>
