<form action="/signup" method="POST" enctype="multipart/form-data">
  <h2>Crea tu cuenta</h2>

  <label for="username">Nombre de usuario</label><br>
  <input type="text" name="username" placeholder="Nombre de usuario">
  <br><br>

  <label for="password">Contraseña</label><br>
  <input type="password" name="password" placeholder="Contraseña">
  <br><br>

  <p>Nivel Actual: </p>
  <select name="level" size="3">
    <option value="Jugador principiante">Principiante</option>
    <option value="Jugador intermedio" selected>Intermedio</option>
    <option value="Jugador avanzado">Avanzado</option>
  </select>
  <br><br>

  <input type="text" name="orientation" placeholder="Brazo dominante" value=" " hidden>
  <br><br>

  <input type="text" name="tournaments" placeholder="Torneos jugados" value=" " hidden>
  <br><br>

  <input type="number" name="gamesWon" placeholder="Partidas ganadas" value="0" hidden>
  <br><br>

  <p>Sube tu foto de perfil</p>
    <input type="text" name="name">
    <input type="file" name="avatar">
  <br><br>

  <% if (typeof message !== "undefined") { %>
  <div class="error-message"><%= message %></div>
  <% } %>

  <input type="submit" value="Crear">
</form>

<p>¿Ya tienes cuenta? Haz clic <a href="/login">aquí</a></p>
