<h2>Modifica tu Perfil</h2>

<h3><%= user.username %></h3>

<form action="/users/<%= user._id %>/edit" method="POST" enctype="multipart/form-data">

  <label for="username">Nombre de usuario</label>
  <input type="text" name="username" value="<%= user.username %>" placeholder="Nombre de usuario">
  <br><br>

  <label for="password">Contraseña</label>
  <input type="password" name="password" value="<%= user.password %>" placeholder="Contraseña">
  <br><br>

  <label for="level">Nivel: </label>
  <select name="level" value="<%= user.level %>">
    <option value="Principiante">Principiante</option>
    <option value="Intermedio" selected>Intermedio</option>
    <option value="Avanzado">Avanzado</option>
  </select>

  <label for="orientation">Mano dominante</label>
  <select name="orientation" value="<%= user.orientation %>">
    <option value="Diestra">Diestra</option>
    <option value="Zurda" selected>Zurda</option>
  </select><br><br>

  <label for="tournaments">Torneos Disputados</label>
  <input type="number" name="tournaments" value="<%= user.tournaments %>" placeholder="Torneos">
  <br><br>

  <label for="favoriteCenter">Centro Favorito</label>
  <input type="text" name="favoriteCenter" value="<%= user.favoriteCenter %>" placeholder="Torneos">
  <br><br>

  <label for="gamesWon">Torneos Ganados</label>
  <input type="number" name="gamesWon" value="0" placeholder="Torneos">
  <br><br>

  <p>Sube tu foto de perfil</p>
    <input type="text" name="name">
    <input type="file" name="photo" value="<%= user.photo %>">
  <br><br>


  <% if (typeof message !== "undefined") { %>
  <div class="error-message"><%= message %></div>
  <% } %>

  <button type="submit">Hecho</button>
</form>
